<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.ovtech.ndtower" >

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--
 To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".PersonDetailActivity"
            android:label="@string/title_activity_person_deatil" >
        </activity>
        <activity
            android:name=".ShowAllPersons"
            android:label="@string/title_activity_show_all_persons" >
        </activity>
        <activity
            android:name=".AddActivity"
            android:label="@string/title_activity_add"
            android:theme="@style/PopupTheme" >
        </activity>
        <activity
            android:name=".ShowAllFlats"
            android:label="@string/title_activity_show_all_flats" >
        </activity>
        <activity
            android:name=".ShowAllVehicles"
            android:label="@string/title_activity_show_all_vehicles" >
        </activity>
        <activity
            android:name=".FlatDetailActivity"
            android:label="@string/title_activity_flat_deatil" >
        </activity>
        <activity
            android:name=".VehicleDetailActivity"
            android:label="@string/title_activity_vehicle_detail" >
        </activity>
        <activity
            android:name=".GridViewActivity"
            android:label="@string/title_activity_grid_view" >
        </activity>
        <activity
            android:name=".ShowImage"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_show_image"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".PopUpImage"
            android:label="@string/title_activity_pop_up_image" >
        </activity>
        <activity
            android:name=".PopImage"
            android:label="@string/title_activity_pop_image" >
        </activity>
    </application>

</manifest>
